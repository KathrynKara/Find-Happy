<div class="page-header">
  <h1>My Happy Places</h1>
</div> <!-- end page header div -->

<div class="row">
  <div class="tag-jumbotron">
    <div class="row">
      <div class="col-md-4">
        <% @tags.each do |tag| %>
          <h3><%= tag.title %></h3>
          <p><%= tag.category %></p>
          <p><%= tag.comment %></p>
          <p class="edit"><%= link_to "Edit", edit_tag_path(tag) %>
            |  
          <%= link_to "Delete", tag_path(tag), :confirm => "Are you sure you want to delete this item?", method: :delete %>
          </p>
          <hr class="hr">
        <% end %>
      </div> <!-- end div col-md-4 -->
      <div class="col-md-8">
        <%= image_tag "http://maps.google.com/maps/api/staticmap?size=850x600&sensor=false&markers=#{gmapmarkers @tags}" %>
      </div> <!-- end div col-md-8 -->
    </div> <!-- end div row -->
  </div><!-- end div final jumbotron -->
</div> <!-- end div row -->

