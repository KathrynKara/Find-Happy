<div class="page-header">
  <h1>Happy Place:</h1>
</div> <!-- end page header div -->

<div class="row">
  <div class="show-jumbotron">
    <div class="row">
      <div class="col-md-4">
          <h3><%= @tag.title %></h3>
          <p><%= @tag.address %></p>
          <p><%= @tag.category %></p>
          <p><%= @tag.comment %></p>
          <% if current_user.id == @tag.user_id  %>
          <%= link_to "Edit", edit_tag_path(@tag) %>
            |  
          <%= link_to "Delete", tag_path(@tag), :confirm => "Are you sure you want to delete this item?", method: :delete %>
          <% end %>
      </div> <!-- end div col-md-4 -->
      <div class="col-md-8">
        <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@tag.latitude}%2C#{@tag.longitude}" %>
      </div> <!-- end div col-md-8 -->
    </div> <!-- end div row -->
  </div><!-- end div show jumbotron -->
</div> <!-- end div row -->



