<div class="page-header">
  <h1>All Happy Places</h1>
  <%= form_tag '/search/index', method: :get do%>
    <%= label_tag 'q', "Search" %>
    <%= text_field_tag 'q' %>
    <%= submit_tag 'Submit' %>
  <% end %>
</div> <!-- end page header div -->
<div class="row">
  <div class="final-jumbotron">
    <div class="row">
      <div class="col-md-4">
        <% @tags.each do |tag| %>
          <h3><%= tag.title %></h3>
          <p><%= tag.category %></p>
          <p><%= tag.comment %></p>
          <hr>
        <% end %>
      </div> <!-- end div col-md-4 -->
      <div class="col-md-8">
        <%= image_tag "http://maps.google.com/maps/api/staticmap?size=850x600&sensor=false&markers=#{gmapmarkers @tags}" %>
      </div> <!-- end div col-md-8 -->
    </div> <!-- end div row -->
  </div><!-- end div final jumbotron -->
</div> <!-- end div row -->


