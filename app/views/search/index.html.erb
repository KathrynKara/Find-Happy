<div class="page-header">
  <h1>Results containing "<%= params[:q] %>":</h1>
</div> <!-- end page header div -->


<div class="row">
  <div class="search-jumbotron">
    <div class="row">
      <div class="col-md-4">
        <% @tags.each do |tag| %>
          <h3><%= tag.title %></h3>
          <p><%= tag.address %></p>
          <p><%= tag.category %></p>
          <p><%= tag.comment %></p>
          <hr>
        <% end %>
      </div> <!-- end div col-md-4 -->
      <div class="col-md-8">
        <%= image_tag "http://maps.google.com/maps/api/staticmap?size=850x600&sensor=false&markers=#{gmapmarkers @tags}" %>
      </div> <!-- end div col-md-8 -->
    </div> <!-- end div row -->
  </div><!-- end div final jumbotron -->
</div> <!-- end div row -->

